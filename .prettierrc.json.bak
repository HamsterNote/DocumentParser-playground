{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.css", "*.scss", "*.html"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
